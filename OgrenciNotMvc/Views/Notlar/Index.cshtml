@using OgrenciNotMvc.Models.EntityFramework;
@model List<TBL_Notlar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table table-bordered">
    <tr>
        <th>Ders ID</th>
        <th>Öğrenci</th>
        <th>Not ID</th>
        <th>1.Sınav</th>
        <th>2.Sınav</th>
        <th>3.Sınav</th>
        <th>Proje</th>
        <th>Ortalama</th>
        <th>Durum</th>
        <th>İşlemler</th>
    </tr>
    <tbody>
        @foreach (var not in Model)
        {
        <tr>
            <td>@not.DERSID</td>
            <td>@not.OGRID</td>
            <td>@not.NOTID</td>
            <td>@not.SINAV1</td>
            <td>@not.SINAV2</td>
            <td>@not.SINAV3</td>
            <td>@not.PROJE</td>
            <td>@not.ORTALAMA</td>
            <td>@not.DURUM</td>
            <td>
                <a class="btn btn-danger" href="/Notlar/Sil/@not.DERSID">Sil</a>
                <a class="btn btn-warning" href="/Notlar/NotGetir/@not.DERSID">Güncelle</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" href="/Notlar/NotGiris">Not Ekle</a>

